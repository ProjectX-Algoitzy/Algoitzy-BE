files:
  "/sbin/appstart" :
    mode: "000755"
    owner: webapp
    group: webapp
    content: |
      #!/usr/bin/env bash

      # run app
      killall java

      # user 모듈 JAR 실행
      JAR_PATH=/var/app/current/deploy/user/module-user.jar
      nohup java -Dspring.profiles.active=dev -jar $JAR_PATH_USER > /dev/null 2>&1 &


      # admin 모듈 JAR 실행
      JAR_PATH=/var/app/current/deploy/admin/module-admin.jar
      nohup java -Dspring.profiles.active=dev -jar $JAR_PATH_ADMIN > /dev/null 2>&1 &

      echo "Both modules are now running in the background."