packages:
  yum:
    wget: []
  apt-get:
    dpkg: []

commands:

  01_download_chrome:
    command: "wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb"

  02_install_chrome:
    command: "dpkg -i google-chrome-stable_current_amd64.deb || apt-get install -f -y"

  03_check_chrome_version:
    command: "google-chrome --version"
